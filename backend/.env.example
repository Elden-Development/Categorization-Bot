# ===========================================================================
# CATEGORIZATION-BOT ENVIRONMENT CONFIGURATION
# ===========================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control!

# ===========================================================================
# AI/ML API KEYS
# ===========================================================================

# Google Gemini API Key (REQUIRED)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Pinecone API Key (OPTIONAL - for ML categorization)
# Get from: https://www.pinecone.io/
# If not provided, ML categorization will be disabled
PINECONE_API_KEY=your_pinecone_api_key_here

# ===========================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ===========================================================================

# Database connection URL
# Format: postgresql://username:password@host:port/database_name
# Example: postgresql://postgres:mypassword@localhost:5432/categorization_bot
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/categorization_bot

# ===========================================================================
# AUTHENTICATION & SECURITY
# ===========================================================================

# Secret key for JWT tokens
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# IMPORTANT: Change this to a random string in production!
SECRET_KEY=your-secret-key-change-this-in-production-use-python-secrets-to-generate

# JWT token expiration (in minutes)
# Default: 10080 (7 days)
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ===========================================================================
# OPTIONAL SETTINGS
# ===========================================================================

# Enable debug mode (shows SQL queries)
# Set to "true" for development, "false" for production
DEBUG=false

# CORS allowed origins (comma-separated)
# Default: * (allows all origins)
# Production example: http://localhost:3000,https://yourdomain.com
CORS_ORIGINS=*
