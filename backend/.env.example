# ===========================================================================
# CATEGORIZATION-BOT ENVIRONMENT CONFIGURATION
# ===========================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control!

# ===========================================================================
# ENVIRONMENT SETTING (IMPORTANT!)
# ===========================================================================

# Set to "production" or "prod" for production deployments
# Set to "development" for local development (default)
#
# IMPORTANT: In production mode, the app will FAIL TO START if:
#   - SECRET_KEY is not set or uses insecure defaults
#   - DATABASE_URL is not set or uses insecure default credentials
#
# This is a security feature to prevent accidental misconfigurations.
ENVIRONMENT=development

# ===========================================================================
# AI/ML API KEYS
# ===========================================================================

# Google Gemini API Key (REQUIRED)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Pinecone API Key (OPTIONAL - for ML categorization)
# Get from: https://www.pinecone.io/
# If not provided, ML categorization will be disabled
PINECONE_API_KEY=your_pinecone_api_key_here

# ===========================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ===========================================================================

# Database connection URL
# Format: postgresql://username:password@host:port/database_name
#
# Development (local PostgreSQL):
#   DATABASE_URL=postgresql://postgres:yourpassword@localhost:5432/categorization_bot
#
# Production (Railway/Cloud):
#   DATABASE_URL=postgresql://user:securepass@host.railway.app:5432/railway
#
# WARNING: In production, using default credentials (postgres:postgres) will
#          cause the application to fail on startup!
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/categorization_bot

# ===========================================================================
# AUTHENTICATION & SECURITY
# ===========================================================================

# Secret key for JWT tokens (REQUIRED IN PRODUCTION)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
#
# Requirements:
#   - Must be at least 32 characters long
#   - Must NOT be a common default value
#   - Should be unique per deployment
#
# WARNING: In production, the app will FAIL TO START with insecure keys!
SECRET_KEY=your-secret-key-change-this-in-production-use-python-secrets-to-generate

# JWT token expiration (in minutes)
# Default: 10080 (7 days)
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ===========================================================================
# OPTIONAL SETTINGS
# ===========================================================================

# Enable debug mode (shows SQL queries)
# Set to "true" for development, "false" for production
DEBUG=false

# CORS allowed origins (comma-separated)
# Default for development allows localhost
# Production example: https://yourdomain.com,https://app.yourdomain.com
# WARNING: Never use "*" in production!
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
